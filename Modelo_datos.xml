<?xml version="1.0" encoding="UTF-8"?>
<OPCUAModel xmlns="http://opcfoundation.org/UA/2011/03/UANodeSet.xsd">
    <Equipment>
        <Device id="S_Pluviometro">
            <Name>Sensor de pluviómetro</Name>
            <Description>Monitorea el pluviómetro de Chiva</Description>
            <Type>Sensor</Type>
            <DataPoints>
                <DataPoint id="Pluviometro_5min">
                    <Name>Pluviómetro cada 5 minutos</Name>
                    <DataType>Float</DataType>
                    <Unit>mm/h</Unit>
                    <Value>0.0</Value>
                </DataPoint>
                <DataPoint id="Pluviometro_1h">
                    <Name>Pluviómetro cada hora</Name>
                    <DataType>Float</DataType>
                    <Unit>mm/h</Unit>
                    <Value>0.0</Value>
                </DataPoint>
                <DataPoint id="Pluviometro_Estado">
                    <Name>Estado del pluviómetro</Name>
                    <DataType>Boolean</DataType>
                    <Unit>True/False</Unit>
                    <Value>True</Value>
                </DataPoint>
                <DataPoint id="Hora_Pluviometro">
                    <Name>Hora</Name>
                    <DataType>DateTime</DataType>
                    <Unit>yyyy,MM,dd,HH,mm,ss</Unit>
                    <Value>2024-10-29T00:05:00</Value>        
                </DataPoint>
            </DataPoints>
        </Device>
        <Device id="S_Caudal">
            <Name>Sensor de Caudal</Name>
            <Description>Monitorea el caudal del Barranco del Poio</Description>
            <Type>Sensor</Type>
            <DataPoints>
                <DataPoint id="Caudal">
                    <Name>Caudal</Name>
                    <DataType>Float</DataType>
                    <Unit>m3/s</Unit>
                    <Value>0.0</Value>
                </DataPoint>
                <DataPoint id="Caudal_Estado">
                    <Name>Estado del caudal</Name>
                    <DataType>Boolean</DataType>
                    <Unit>True/False</Unit>
                    <Value>True</Value>
                </DataPoint>
                <DataPoint id="Hora_Caudal">
                    <Name>Hora</Name>
                    <DataType>DateTime</DataType>
                    <Unit>yyyy,MM,dd,HH,mm,ss</Unit>
                    <Value>2024-10-28T10:25:00</Value>        
                </DataPoint>
            </DataPoints>
        </Device>
        <Device id="S_Hora">
            <Name>Hora</Name>
            <Description>Referencia de tiempo Real</Description>
            <Type>RTC</Type>
            <DataPoints>
                <DataPoint id="Hora">
                    <Name>Hora</Name>
                    <DataType>DateTime</DataType>
                    <Unit>yyyy,MM,dd,HH,mm,ss</Unit>
                    <Value>2024-10-28T00:00:00</Value>        
                </DataPoint>
                <DataPoint id="Multiplicador">
                    <Name>Multiplicador de velocidad de suministro</Name>
                    <DataType>Float</DataType>
                    <Unit>x</Unit>
                    <Value>1.0</Value>        
                </DataPoint>
            </DataPoints>
        </Device>
    </Equipment>
</OPCUAModel>
