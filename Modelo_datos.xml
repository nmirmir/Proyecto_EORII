<?xml version="1.0" encoding="UTF-8"?>
<OPCUAModel xmlns="http://opcfoundation.org/UA/2011/03/UANodeSet.xsd">
    <Equipment>
        <Device id="S_Pluviometro">
            <Name>Sensor de pluviómetro</Name>
            <Description>Monitorea el pluviómetro de Chiva</Description>
            <Type>Sensor</Type>
            <DataPoints>
                <DataPoint id="Pluviometro_5min">
                    <Name>Pluviómetro cada 5 minutos</Name>
                    <DataType>Float</DataType>
                    <Unit>mm/h</Unit>
                    <Value>0</Value>
                </DataPoint>
                <DataPoint id="Pluviometro_1h">
                    <Name>Pluviómetro cada hora</Name>
                    <DataType>Float</DataType>
                    <Unit>mm/h</Unit>
                    <Value>0</Value>
                </DataPoint>
                <DataPoint id="Pluviometro_Estado">
                    <Name>Estado del pluviómetro</Name>
                    <DataType>Boolean</DataType>
                    <Unit>True/False</Unit>
                    <Value>True</Value>
                </DataPoint>
            </DataPoints>
        </Device>
        <Device id="S_Aforo">
            <Name>Sensor de Aforo</Name>
            <Description>Monitorea el aforo del Barranco del Poio</Description>
            <Type>Sensor</Type>
            <DataPoints>
                <DataPoint id="Aforo">
                    <Name>Aforo</Name>
                    <DataType>Float</DataType>
                    <Unit>m3/s</Unit>
                    <Value>0</Value>
                </DataPoint>
            </DataPoints>
        </Device>
        <Device id="S_Hora">
            <Name>Hora</Name>
            <Description>Referencia de tiempo Real</Description>
            <Type>RTC</Type>
            <DataPoints>
                <DataPoint id="Hora">
                    <Name>Hora</Name>
                    <DataType>DateTime</DataType>
                    <Unit>hh:mm:ss</Unit>
                    <Value>0</Value>        
                </DataPoint>
            </DataPoints>
        </Device>
    </Equipment>
</OPCUAModel>
